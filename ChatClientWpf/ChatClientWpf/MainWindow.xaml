		<ListBox x:Name="ListBoxMess" x:FieldModifier="public" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="234" Margin="49,35.6,0,0" Grid.Row="1" Grid.RowSpan="4" VerticalAlignment="Top" Width="619"/>
	</Grid>
</Window>
