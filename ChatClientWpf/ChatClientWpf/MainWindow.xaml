		<TextBox x:Name="UserPass" Grid.Column="0" HorizontalAlignment="Left" Height="23" Margin="115,27,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
		<Button Content="Подключиться" Grid.Column="2" HorizontalAlignment="Left" Margin="45.4,23,0,0" VerticalAlignment="Top" Width="93" Click="Button_Click_1" Height="27"/>
		<Label Content="Кому відправити:" HorizontalAlignment="Left" Margin="49,42.6,0,0" Grid.Row="5" VerticalAlignment="Top"/>
		<Label Content="Повідомлення" HorizontalAlignment="Left" Margin="49,9.6,0,0" Grid.Row="5" VerticalAlignment="Top" RenderTransformOrigin="-0.76,-0.102"/>
		<TextBox x:Name="TextBoxMess" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="10.2,13.6,0,0" Grid.Row="5" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="245"/>
